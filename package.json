{
  "name": "corporate-portal",
  "version": "1.0.0",
  "description": "Корпоративный портал для управления командировками, обучением персонала и метрологическим контролем",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000 --detectOpenHandles",
    "setup": "npm install && echo \"Установка зависимостей завершена\"",
    "production": "NODE_ENV=production node server.js",
    "migrate:make": "knex migrate:make",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "db:reset": "cross-env node -e \"const fs = require('fs'); try { fs.unlinkSync('database.db'); } catch(e) {}\" && npm run migrate:latest && echo \"База данных успешно пересоздана.\""
  },
  "keywords": [
    "корпоративный портал",
    "командировки",
    "управление персоналом",
    "метрология",
    "обучение",
    "express",
    "sqlite",
    "авторизация"
  ],
  "author": {
    "name": "Прибор Автоматика",
    "email": "admin@pribor-avtomatika.ru"
  },
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.17.3",
    "express-validator": "^7.2.1",
    "knex": "^3.1.0",
    "multer": "^2.0.2",
    "sqlite3": "^5.1.7",
    "tiny-csrf": "^1.1.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/prikor-avtomatika/corporate-portal.git"
  },
  "bugs": {
    "url": "https://github.com/prikor-avtomatika/corporate-portal/issues"
  },
  "homepage": "https://github.com/prikor-avtomatika/corporate-portal#readme"
}
